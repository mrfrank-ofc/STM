    <!-- Firebase SDK and App Scripts -->
    <script type="module">
      import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
      import {
        getAuth,
        signOut,
        onAuthStateChanged,
        sendPasswordResetEmail
      } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
      import {
        getFirestore,
        doc,
        getDoc,
        setDoc,
        updateDoc,
        collection,
        query,
        where,
        orderBy,
        getDocs
      } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";
      import {
        getStorage,
        ref,
        uploadBytes,
        getDownloadURL
      } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-storage.js";

      const firebaseConfig = {
        apiKey: "AIzaSyAR9J2Wz7Eu8dXRzDG8JNHcymLCUQUPJRo",
        authDomain: "deee-9ab53.firebaseapp.com",
        projectId: "deee-9ab53",
        storageBucket: "deee-9ab53.firebasestorage.app",
        messagingSenderId: "399732664479",
        appId: "1:399732664479:web:b84ac30e8266cc51761aaa",
        measurementId: "G-524ZPBX42B"
      };

      const appFirebase = initializeApp(firebaseConfig);
      const auth = getAuth(appFirebase);
      const db = getFirestore(appFirebase);
      const storage = getStorage(appFirebase);

      // Utility: Show message in message box
      function showMessage(message, type) {
        const messageBox = document.getElementById("messageBox");
        messageBox.textContent = message;
        messageBox.className = "";
        messageBox.classList.add(type);
        messageBox.style.display = "block";
        setTimeout(() => {
          messageBox.style.display = "none";
        }, 3000);
      }

      // Fetch student data for Personal Info
      const fetchStudentData = async (email) => {
        try {
          const studentRef = doc(db, "students", email);
          const docSnap = await getDoc(studentRef);
          if (docSnap.exists()) {
            const studentData = docSnap.data();
            document.getElementById("name").value = studentData.firstname || "";
            document.getElementById("surname").value = studentData.surname || "";
            document.getElementById("phone").value = studentData.phone || "";
            document.getElementById("email").value = studentData.email || "";
            document.getElementById("parent-name").value = studentData.parentName || "";
            document.getElementById("parent-phone").value = studentData.parentPhone || "";
            document.getElementById("dob").value = studentData.dob || "";
            document.getElementById("gender").value = studentData.gender || "male";
            document.getElementById("address").value = studentData.address || "";
            document.getElementById("profilePic").src =
              studentData.profilePic ||
              "https://i.ibb.co/ynzs0qc2/subzero-bot.jpg";
            document.getElementById("studentDisplayName").textContent = studentData.firstname || "";
            document.getElementById("welcomeMessage").textContent = `Hello, ${studentData.firstname}`;
          } else {
            document.getElementById("welcomeMessage").textContent = `Welcome, ${auth.currentUser.email.split('@')[0]}`;
          }
        } catch (error) {
          console.error("Error fetching student data:", error);
          showMessage("Error fetching student data: " + error.message, "error");
        }
      };

      // Save/Update student data from Personal Info page
      const saveStudentData = async () => {
        try {
          const email = auth.currentUser.email;
          const studentRef = doc(db, "students", email);
          const studentData = {
            firstname: document.getElementById("name").value,
            surname: document.getElementById("surname").value,
            phone: document.getElementById("phone").value,
            email: email,
            parentName: document.getElementById("parent-name").value,
            parentPhone: document.getElementById("parent-phone").value,
            dob: document.getElementById("dob").value,
            gender: document.getElementById("gender").value,
            address: document.getElementById("address").value,
            lastUpdated: new Date()
          };
          await setDoc(studentRef, studentData, { merge: true });
          showMessage("Profile updated successfully!", "success");
        } catch (error) {
          console.error("Error saving student data:", error);
          showMessage("Error saving student data: " + error.message, "error");
        }
      };

      // Reset Password
      const resetPassword = async () => {
        const userEmail = auth.currentUser.email;
        try {
          await sendPasswordResetEmail(auth, userEmail);
          showMessage("Password reset email sent! Check your inbox.", "success");
        } catch (error) {
          console.error("Error resetting password:", error);
          showMessage("Error resetting password: " + error.message, "error");
        }
      };

      // Logout function
      const logout = async () => {
        try {
          await signOut(auth);
          window.location.href = "/login";
        } catch (error) {
          console.error("Logout error:", error);
        }
      };

      document.getElementById("saveChangesBtn").addEventListener("click", saveStudentData);
      document.getElementById("logoutBtn").addEventListener("click", logout);
      document.getElementById("changePasswordBtn").addEventListener("click", resetPassword);

      // Upload new profile picture
      document.getElementById("profilePicInput").addEventListener("change", async (e) => {
        const file = e.target.files[0];
        if (!file) return;
        const user = auth.currentUser;
        if (!user) return;
        const storageRef = ref(storage, `profilePics/${user.email}`);
        try {
          await uploadBytes(storageRef, file);
          const photoURL = await getDownloadURL(storageRef);
          const studentRef = doc(db, "students", user.email);
          await updateDoc(studentRef, { profilePic: photoURL });
          document.getElementById("profilePic").src = photoURL;
          showMessage("Profile picture updated!", "success");
        } catch (error) {
          console.error("Error uploading profile picture:", error);
          showMessage("Error uploading profile picture: " + error.message, "error");
        }
      });

      // Populate student dropdowns for forms (if needed)
      async function populateStudentDropdowns() {
        try {
          const querySnapshot = await getDocs(collection(db, "students"));
          let options = '<option value="">Select Student</option>';
          querySnapshot.forEach(docSnap => {
            const data = docSnap.data();
            options += `<option value="${data.email}">${data.firstname || ""} ${data.surname || ""} (${data.email})</option>`;
          });
          // For teacher dashboard forms – not needed here in student dashboard
        } catch (error) {
          console.error("Error populating student dropdowns:", error);
        }
      }

      // ---------- New: Load dynamic data for homepage ----------

      // Load current grade (fetch the grade document for this student)
      async function loadCurrentGrade() {
        try {
          const studentEmail = auth.currentUser.email;
          // Query grades collection where studentEmail equals current student's email
          const gradesQuery = query(
            collection(db, "grades"),
            where("studentEmail", "==", studentEmail)
          );
          const querySnapshot = await getDocs(gradesQuery);
          let currentGrade = "Not set";
          // For simplicity, pick the document with the highest year (and term if needed)
          let bestGrade = null;
          querySnapshot.forEach((docSnap) => {
            const gradeData = docSnap.data();
            // Compare year (convert to number) and term if needed
            if (!bestGrade || Number(gradeData.year) > Number(bestGrade.year)) {
              bestGrade = gradeData;
            } else if (Number(gradeData.year) === Number(bestGrade.year)) {
              // Simple term ordering: Term 3 > Term 2 > Term 1
              const termOrder = { "Term 1": 1, "Term 2": 2, "Term 3": 3 };
              if (termOrder[gradeData.term] > termOrder[bestGrade.term]) {
                bestGrade = gradeData;
              }
            }
          });
          if (bestGrade) {
            currentGrade = `${bestGrade.finalGrade} (${bestGrade.studentClass})`;
          }
          document.getElementById("currentGrade").textContent = currentGrade;
        } catch (error) {
          console.error("Error loading current grade:", error);
          document.getElementById("currentGrade").textContent = "Error";
        }
      }

      // Load attendance (fetch the most recent attendance document)
      async function loadAttendance() {
        try {
          const studentEmail = auth.currentUser.email;
          const attendanceQuery = query(
            collection(db, "attendance"),
            where("studentEmail", "==", studentEmail)
          );
          const querySnapshot = await getDocs(attendanceQuery);
          let latestAttendance = null;
          // Define a month order for comparison
          const monthOrder = {
            January: 1, February: 2, March: 3, April: 4, May: 5, June: 6,
            July: 7, August: 8, September: 9, October: 10, November: 11, December: 12
          };
          querySnapshot.forEach((docSnap) => {
            const data = docSnap.data();
            if (!latestAttendance) {
              latestAttendance = data;
            } else {
              // Compare by year first
              if (Number(data.year) > Number(latestAttendance.year)) {
                latestAttendance = data;
              } else if (Number(data.year) === Number(latestAttendance.year)) {
                // Compare month using monthOrder
                if (monthOrder[data.month] > monthOrder[latestAttendance.month]) {
                  latestAttendance = data;
                }
              }
            }
          });
          let attendanceText = "Not set";
          if (latestAttendance) {
            attendanceText = `${latestAttendance.percentage}% (${latestAttendance.month} ${latestAttendance.year})`;
          }
          document.getElementById("attendance").textContent = attendanceText;
        } catch (error) {
          console.error("Error loading attendance:", error);
          document.getElementById("attendance").textContent = "Error";
        }
      }

      // Load notices from the "notices" collection (order by timestamp descending)
      async function loadNotices() {
        try {
          const noticesQuery = query(
            collection(db, "notices"),
            orderBy("timestamp", "desc")
          );
          const querySnapshot = await getDocs(noticesQuery);
          let noticesHtml = "";
          querySnapshot.forEach((docSnap) => {
            const notice = docSnap.data();
            noticesHtml += `
              <div class="notice-card">
                <h3>${notice.noticeTitle}</h3>
                <p>${notice.noticeContent}</p>
                <small>Year: ${notice.noticeYear} | Term: ${notice.noticeTerm}</small>
              </div>
            `;
          });
          document.getElementById("noticesList").innerHTML = noticesHtml || "<p>No notices available.</p>";
        } catch (error) {
          console.error("Error loading notices:", error);
          document.getElementById("noticesList").innerHTML = "<p>Error loading notices.</p>";
        }
      }

      // ---------- End of dynamic homepage data ----------

      // ---------- Side Menu Controls ----------
      const menuBtn = document.getElementById("menuBtn");
      const sideMenu = document.getElementById("sideMenu");
      const closeBtn = document.getElementById("closeBtn");
      menuBtn.addEventListener("click", () => {
        sideMenu.classList.toggle("active");
      });
      closeBtn.addEventListener("click", () => {
        sideMenu.classList.remove("active");
      });
      document.addEventListener("click", (e) => {
        if (!sideMenu.contains(e.target) && !menuBtn.contains(e.target)) {
          sideMenu.classList.remove("active");
        }
      });

      // Menu Links - Section Switching
      const menuLinks = document.querySelectorAll(".menu-links a");
      menuLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          e.preventDefault();
          const targetId = link.getAttribute("href").substring(1);
          document.querySelectorAll("section").forEach((sec) => {
            sec.style.display = sec.id === targetId ? "block" : "none";
          });
          sideMenu.classList.remove("active");
          // If "updates" (notices) section is opened, load notices
          if (targetId === "updates") {
            loadNotices();
          }
        });
      });

      // Theme Toggle
      const themeToggle = document.getElementById("themeToggle");
      let isDark = true;
      themeToggle.addEventListener("click", () => {
        isDark = !isDark;
        document.body.setAttribute("data-theme", isDark ? "dark" : "light");
        themeToggle.innerHTML = isDark
          ? '<i class="fas fa-moon"></i>'
          : '<i class="fas fa-sun"></i>';
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
      if (localStorage.getItem("theme")) {
        const savedTheme = localStorage.getItem("theme");
        document.body.setAttribute("data-theme", savedTheme);
        isDark = savedTheme === "dark";
        themeToggle.innerHTML = isDark
          ? '<i class="fas fa-moon"></i>'
          : '<i class="fas fa-sun"></i>';
      }

      // ---------- On Auth State Change ----------
      onAuthStateChanged(auth, (user) => {
        if (!user) {
          window.location.href = "/login";
        } else {
          fetchStudentData(user.email);
          loadCurrentGrade();
          loadAttendance();
          // Optionally, loadNotices() can also be called here
          // loadNotices();
        }
      });
    </script>
  </body>
</html>
